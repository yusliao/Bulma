{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/battery-mes-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "",
    "SlaveConnection": ""
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "Database": 0,
    "KeyPrefix": "BatteryMES:",
    "CommandTimeout": 5000,
    "ConnectTimeout": 5000
  },
  "InfluxDB": {
    "Url": "",
    "Token": "",
    "Organization": "",
    "Bucket": "",
    "Timeout": 30
  },
  "JWT": {
    "Key": "BatteryPackingMES-Secret-Key-2024-Development-Environment-Very-Long-String-For-Security",
    "Issuer": "BatteryPackingMES",
    "Audience": "BatteryPackingMES-Users",
    "ExpirationHours": "24",
    "RefreshTokenExpiryInDays": 7
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "Application": {
    "Name": "锂电池包装工序MES系统",
    "Version": "1.0.0",
    "Environment": "",
    "Features": {
      "EnableSwagger": false,
      "EnableDetailedErrors": false,
      "EnablePerformanceLogging": false
    }
  },
  "Database": {
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:30"
  },
  "Cache": {
    "DefaultAbsoluteExpiration": "01:00:00",
    "DefaultSlidingExpiration": "00:30:00"
  }
} 